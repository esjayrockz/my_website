<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%=@project.created_at.strftime('%A, %B %d')%></p>
    <h1><%=@project.title%></h1>
    <hr>
  </header>
  <div id="content">

    <%= markdown @project.description%>
    <% if !@project.link.blank?%>
      <div class="button_wrapper">
      <a href = "<%= @project.link %>" class= "project_button" target="_blank">Visit link </a>
      </div>
    <% end %>


  </div>
  <hr>
  <%= @project.time_period %>

</div>


<br>
<br>
